<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16"
            fx:controller="Main.Controller">
    <children>
        <BorderPane layoutX="107.0" layoutY="81.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <MenuBar BorderPane.alignment="CENTER">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem id="menuSaveButton" mnemonicParsing="false" text="Save"/>
                                <MenuItem id="menuSettingsButton" mnemonicParsing="false" text="Settings"/>
                                <MenuItem id="menuQuitButton" mnemonicParsing="false" onAction="#quitProgram"
                                          text="Quit"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </top>
            <bottom>
                <Pane prefHeight="31.0" prefWidth="900.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label layoutX="14.0" layoutY="-1.0" prefHeight="31.0" prefWidth="141.0" text="BookJar 1.0">
                            <font>
                                <Font name="Trebuchet MS Bold" size="25.0"/>
                            </font>
                        </Label>
                    </children>
                </Pane>
            </bottom>
            <center>
                <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <top>
                        <ToolBar id="searchByTitle" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <items>
                                <Button id="addBookButton" mnemonicParsing="false" onAction="#addBook" text="Add Book"/>
                                <Button id="removeBookButton" mnemonicParsing="false" text="Remove Book"/>
                                <TextField id="searchField"/>
                                <RadioButton mnemonicParsing="false" selected="true" text="Search by title">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="searchBy"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton id="searchByAuthor" mnemonicParsing="false" text="Search by author"
                                             toggleGroup="$searchBy"/>
                            </items>
                        </ToolBar>
                    </top>
                    <center>
                        <TableView fx:id="bookTable" editable="true" prefHeight="476.0" prefWidth="900.0"
                                   BorderPane.alignment="CENTER">
                            <columns>
                                <TableColumn fx:id="indexColumn" text="No."/>
                                <TableColumn fx:id="titleColumn" text="Title"/>
                                <TableColumn fx:id="authorColumn" text="Author"/>
                                <TableColumn fx:id="genreColumn" text="Genre"/>
                                <TableColumn fx:id="notesColumn" text="Notes"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </center>
                </BorderPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
