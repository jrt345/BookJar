<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="450.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/16"
            fx:controller="main.controllers.BookEditorController">
    <children>
        <BorderPane prefHeight="450.0" prefWidth="450.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <AnchorPane BorderPane.alignment="CENTER">
                    <children>
                        <Label alignment="CENTER" layoutX="130.0" layoutY="10.0" text="Book Editor"
                               AnchorPane.bottomAnchor="9.0" AnchorPane.leftAnchor="130.0"
                               AnchorPane.rightAnchor="130.0" AnchorPane.topAnchor="10.0">
                            <font>
                                <Font name="Trebuchet MS Bold" size="35.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
            </top>
            <bottom>
                <ToolBar prefHeight="30.0" prefWidth="450.0" BorderPane.alignment="CENTER">
                    <items>
                        <Button mnemonicParsing="false" onAction="#saveBook" prefWidth="50.0" text="Save"/>
                        <Button mnemonicParsing="false" onAction="#reset" prefWidth="50.0" text="Reset"/>
                        <Button mnemonicParsing="false" onAction="#cancel" text="Cancel"/>
                    </items>
                </ToolBar>
            </bottom>
            <center>
                <AnchorPane BorderPane.alignment="CENTER">
                    <children>
                        <TextArea fx:id="notesArea" layoutX="125.0" layoutY="78.0" prefHeight="175.0" prefWidth="440.0"
                                  wrapText="true" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0"
                                  AnchorPane.rightAnchor="5.0"/>
                        <GridPane layoutX="5.0" layoutY="3.0" prefHeight="175.0" prefWidth="439.0"
                                  AnchorPane.bottomAnchor="177.0" AnchorPane.leftAnchor="5.0"
                                  AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="3.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="215.0" minWidth="10.0" prefWidth="83.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="378.0" minWidth="10.0"
                                                   prefWidth="357.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="Notes:" GridPane.rowIndex="3">
                                    <font>
                                        <Font name="Trebuchet MS Bold" size="23.0"/>
                                    </font>
                                </Label>
                                <Label layoutX="10.0" layoutY="149.0" text="Title:">
                                    <font>
                                        <Font name="Trebuchet MS Bold" size="23.0"/>
                                    </font>
                                </Label>
                                <Label layoutX="10.0" layoutY="17.0" text="Author:" GridPane.rowIndex="1">
                                    <font>
                                        <Font name="Trebuchet MS Bold" size="23.0"/>
                                    </font>
                                </Label>
                                <Label layoutX="10.0" layoutY="61.0" text="Genre:" GridPane.rowIndex="2">
                                    <font>
                                        <Font name="Trebuchet MS Bold" size="23.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="titleField" GridPane.columnIndex="1"/>
                                <TextField fx:id="authorField" prefWidth="357.0" GridPane.columnIndex="1"
                                           GridPane.rowIndex="1"/>
                                <TextField fx:id="genreField" prefWidth="357.0" GridPane.columnIndex="1"
                                           GridPane.rowIndex="2"/>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
