<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16"
            fx:controller="main.controllers.Controller">
    <children>
        <BorderPane layoutX="107.0" layoutY="81.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <MenuBar BorderPane.alignment="CENTER">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem id="menuSaveButton" mnemonicParsing="false" text="Save"/>
                                <MenuItem id="menuSettingsButton" mnemonicParsing="false" text="Settings"/>
                                <MenuItem id="menuQuitButton" mnemonicParsing="false" onAction="#quitProgram"
                                          text="Quit"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </top>
            <center>
                <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <top>
                        <ToolBar id="searchByTitle" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <items>
                                <TextField id="searchField"/>
                                <RadioButton mnemonicParsing="false" selected="true" text="Search by title">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="searchBy"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton id="searchByAuthor" mnemonicParsing="false" text="Search by author"
                                             toggleGroup="$searchBy"/>
                            </items>
                        </ToolBar>
                    </top>
                    <center>
                        <TableView fx:id="bookTable" editable="true" prefHeight="476.0" prefWidth="900.0"
                                   BorderPane.alignment="CENTER">
                            <columns>
                                <TableColumn fx:id="indexColumn" text="No."/>
                                <TableColumn fx:id="titleColumn" text="Title"/>
                                <TableColumn fx:id="authorColumn" text="Author"/>
                                <TableColumn fx:id="genreColumn" text="Genre"/>
                                <TableColumn fx:id="notesColumn" text="Notes"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                            <contextMenu>
                                <ContextMenu>
                                    <items>
                                        <MenuItem fx:id="viewContext" mnemonicParsing="false" onAction="#viewNotes"
                                                  text="View Notes"/>
                                        <MenuItem fx:id="editContext" mnemonicParsing="false" onAction="#editBook"
                                                  text="Edit"/>
                                        <MenuItem fx:id="deleteContext" mnemonicParsing="false" onAction="#deleteBook"
                                                  text="Delete"/>
                                    </items>
                                </ContextMenu>
                            </contextMenu>
                        </TableView>
                    </center>
                </BorderPane>
            </center>
            <bottom>
                <BorderPane prefHeight="80.0" prefWidth="900.0" BorderPane.alignment="CENTER">
                    <bottom>
                        <Pane prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <children>
                                <Label layoutX="14.0" layoutY="5.0" prefHeight="31.0" prefWidth="141.0"
                                       text="BookJar 1.0">
                                    <font>
                                        <Font name="Trebuchet MS Bold" size="25.0"/>
                                    </font>
                                </Label>
                            </children>
                        </Pane>
                    </bottom>
                    <top>
                        <HBox prefHeight="40.0" prefWidth="900.0" spacing="5.0" BorderPane.alignment="CENTER">
                            <children>
                                <TextField fx:id="titleField" promptText="Title" HBox.hgrow="SOMETIMES"/>
                                <TextField fx:id="authorField" promptText="Author" HBox.hgrow="SOMETIMES"/>
                                <TextField fx:id="genreField" promptText="Genre" HBox.hgrow="SOMETIMES"/>
                                <Button mnemonicParsing="false" onAction="#openNotes" prefWidth="75.0" text="Notes"/>
                                <Button mnemonicParsing="false" onAction="#addBook" prefWidth="75.0" text="Add book"/>
                            </children>
                            <padding>
                                <Insets left="5.0" right="5.0" top="7.5"/>
                            </padding>
                        </HBox>
                    </top>
                </BorderPane>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
